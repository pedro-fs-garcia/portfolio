<%- include('partials/header') %>

<section class="bg-gray-200 min-h-screen py-24">
    <div class="container mx-auto px-4">
        <!-- Breadcrumb -->
        <div class="mb-8" data-aos="fade-right">
            <a href="/projetos" class="inline-flex items-center text-gray-600 hover:text-gray-800">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Voltar para Projetos
            </a>
        </div>

        <!-- Project Header -->
        <div class="bg-gray-700 rounded-2xl shadow-xl overflow-hidden mb-8">
            <div class="relative h-96 flex">
                <div class="w-1/2 pt-48 pl-8 text-white">
                    <h1 class="text-4xl font-bold text-white mb-2 py-6"><%= project.name %></h1>
                    <div class="flex flex-wrap gap-2">
                        <% project.technologies.forEach(function(tech) { %>
                            <span class="bg-blue-900 bg-opacity-50 px-3 py-1 rounded-full text-sm transform hover:scale-110 transition duration-300">
                                <%= tech %>
                            </span>
                        <% }); %>
                    </div>
                </div>
                <div class="w-1/2 flex items-center justify-center">
                    <img src="<%= project.image %>" 
                         alt="<%= project.name %>" 
                         class="h-full object-cover transform hover:scale-105 transition duration-300">
                    <div class="absolute inset-0 from-black to-transparent opacity-70"></div>
                </div>
            </div>
        </div>

        <!-- Project Content -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-xl p-8" data-aos="fade-right">
                    <h2 class="text-2xl font-bold mb-4 text-gray-800">Sobre o Projeto</h2>
                    <p class="text-gray-700 leading-relaxed mb-6">
                        <%= project.description %>
                    </p>

                    <!-- Features Section -->
                    <div class="mt-8">
                        <h3 class="text-xl font-bold mb-4 text-gray-800">Principais Características</h3>
                        <ul class="list-disc list-inside space-y-2 text-gray-700">
                            <% if (project.features && project.features.length > 0) { %>
                                <% project.features.forEach(function(feature) { %>
                                    <li class="flex items-center">
                                        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                        <%= feature %>
                                    </li>
                                <% }); %>
                            <% } else { %>
                                <li class="flex items-center">
                                    <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    Interface responsiva e moderna
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    Otimização para performance
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    Integração com serviços externos
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    Segurança e proteção de dados
                                </li>
                            <% } %>
                        </ul>
                    </div>

                    <!-- Challenges Section -->
                    <div class="mt-12" data-aos="fade-up">
                        <h3 class="text-xl font-bold mb-4 text-gray-800">Desafios Enfrentados</h3>
                        <div class="bg-gray-50 rounded-xl p-6">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <p class="text-gray-700 leading-relaxed">
                                        <%= project.desafios %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Solutions Section -->
                    <div class="mt-8" data-aos="fade-up" data-aos-delay="100">
                        <h3 class="text-xl font-bold mb-4 text-gray-800">Soluções Implementadas</h3>
                        <div class="bg-gray-50 rounded-xl p-6">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <p class="text-gray-700 leading-relaxed">
                                        <%= project.solucoes %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Learnings Section -->
                    <div class="mt-8" data-aos="fade-up" data-aos-delay="200">
                        <h3 class="text-xl font-bold mb-4 text-gray-800">Aprendizados</h3>
                        <div class="bg-gray-50 rounded-xl p-6">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <p class="text-gray-700 leading-relaxed">
                                        <%= project.aprendizados %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl p-6 sticky top-24" data-aos="fade-left">
                    <h3 class="text-xl font-bold mb-4 text-gray-800">Detalhes do Projeto</h3>
                    
                    <!-- Technologies -->
                    <div class="mb-6">
                        <h4 class="font-semibold mb-2 text-gray-700">Tecnologias Utilizadas</h4>
                        <div class="flex flex-wrap gap-2">
                            <% project.technologies.forEach(function(tech) { %>
                                <span class="bg-gray-100 px-3 py-1 rounded-full text-sm transform hover:scale-110 transition duration-300">
                                    <%= tech %>
                                </span>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Links -->
                    <div class="space-y-4">
                        <a href="<%= project.github %>" 
                           target="_blank"
                           class="flex items-center justify-center w-full bg-gray-800 text-white py-2 px-4 rounded-lg hover:bg-gray-700 transition duration-300 transform hover:scale-105">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                            </svg>
                            Ver no GitHub
                        </a>
                        
                        <% if (project.demo) { %>
                            <a href="<%= project.demo %>" 
                               target="_blank"
                               class="flex items-center justify-center w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                                Ver Demonstração
                            </a>
                        <% } %>
                    </div>

                    <!-- Additional Info -->
                    <div class="mt-6 pt-6 border-t">
                        <h4 class="font-semibold mb-2 text-gray-700">Informações Adicionais</h4>
                        <ul class="space-y-2 text-gray-600">
                            <li class="flex items-center">
                                <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="font-medium pr-2">Status: </span> 
                                <%= project.status || 'Completo' %>
                            </li>
                            <li class="flex items-center">
                                <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                <span class="font-medium pr-2">Data de Conclusão: </span> 
                                <%= project.completionDate || 'Em andamento' %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    AOS.init({
        duration: 800,
        easing: 'ease-in-out',
        once: true
    });
</script>

<%- include('partials/footer') %>
