<%- include('partials/header') %>

<section class="bg-gray-100 min-h-screen py-12">
    <div class="container mx-auto px-4">
        <!-- Breadcrumb -->
        <div class="mb-8">
            <a href="/projetos" class="text-gray-600 hover:text-gray-800">
                ← Voltar para Projetos
            </a>
        </div>

        <!-- Project Header -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
            <div class="relative h-96">
                <img src="<%= project.image %>" 
                     alt="<%= project.name %>" 
                     class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-70"></div>
                <div class="absolute bottom-0 left-0 p-8 text-white">
                    <h1 class="text-4xl font-bold mb-2"><%= project.name %></h1>
                    <div class="flex flex-wrap gap-2">
                        <% project.technologies.forEach(function(tech) { %>
                            <span class="bg-gray-800 bg-opacity-50 px-3 py-1 rounded-full text-sm">
                                <%= tech %>
                            </span>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Content -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-lg p-8">
                    <h2 class="text-2xl font-bold mb-4">Sobre o Projeto</h2>
                    <p class="text-gray-700 leading-relaxed mb-6">
                        <%= project.description %>
                    </p>
                    <!-- Features Section -->
                    <div class="mt-8">
                        <h3 class="text-xl font-bold mb-4">Principais Funcionalidades</h3>
                        <ul class="list-disc list-inside space-y-2 text-gray-700">
                            <% if (project.features && project.features.length > 0) { %>
                                <% project.features.forEach(function(feature) { %>
                                    <li><%= feature %></li>
                                <% }); %>
                            <% } else { %>
                                <li>Interface responsiva e moderna</li>
                                <li>Otimização para performance</li>
                                <li>Integração com serviços externos</li>
                                <li>Segurança e proteção de dados</li>
                            <% } %>
                        </ul>
                    </div>
                    <br>
                    <h3 class="text-l font-bold mb-4">Desafios</h3>
                    <p class="text-gray-700 leading-relaxed mb-6">
                        <%= project.desafios %>
                    </p>

                    <h3 class="text-l font-bold mb-4">Soluções</h3>
                    <p class="text-gray-700 leading-relaxed mb-6">
                        <%= project.solucoes %>
                    </p>

                    <h3 class="text-l font-bold mb-4">Aprendizados</h3>
                    <p class="text-gray-700 leading-relaxed mb-6">
                        <%= project.aprendizados %>
                    </p>
                    

                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-lg p-6 sticky top-8">
                    <h3 class="text-xl font-bold mb-4">Detalhes do Projeto</h3>
                    
                    <!-- Technologies -->
                    <div class="mb-6">
                        <h4 class="font-semibold mb-2">Tecnologias Utilizadas</h4>
                        <div class="flex flex-wrap gap-2">
                            <% project.technologies.forEach(function(tech) { %>
                                <span class="bg-gray-100 px-3 py-1 rounded-full text-sm">
                                    <%= tech %>
                                </span>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Links -->
                    <div class="space-y-4">
                        <a href="<%= project.github %>" 
                           target="_blank"
                           class="block w-full bg-gray-800 text-white text-center py-2 px-4 rounded hover:bg-gray-700 transition">
                            Ver no GitHub
                        </a>
                        
                    </div>

                    <!-- Additional Info -->
                    <div class="mt-6 pt-6 border-t">
                        <h4 class="font-semibold mb-2">Informações Adicionais</h4>
                        <ul class="space-y-2 text-gray-600">
                            <li>
                                <span class="font-medium">Status:</span> 
                                <%= project.status || 'Completo' %>
                            </li>
                            <li>
                                <span class="font-medium">Data de Conclusão:</span> 
                                <%= project.completionDate || 'Em andamento' %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
