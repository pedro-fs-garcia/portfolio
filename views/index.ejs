<script>
  const carousel = document.getElementById("carousel");
  const prev = document.getElementById("prev");
  const next = document.getElementById("next");

  let offset = 0;
  let slideWidth = carousel.children[0].offsetWidth; // Largura inicial do slide
  const slides = carousel.children.length;

  const updateCarousel = () => {
    slideWidth = carousel.children[0].offsetWidth; // Atualizar largura
    carousel.style.transform = `translateX(-${offset * slideWidth}px)`; // Ajustar posição
  };

  // Função para avançar para o próximo slide
  const nextSlide = () => {
    offset = (offset + 1) % slides; // Ciclo para o próximo slide
    carousel.style.transform = `translateX(-${offset * slideWidth}px)`;
  };

  // Função para voltar ao slide anterior
  const prevSlide = () => {
    offset = (offset - 1 + slides) % slides; // Ciclo para o slide anterior
    carousel.style.transform = `translateX(-${offset * slideWidth}px)`;
  };

  // Eventos dos botões
  prev.addEventListener("click", prevSlide);
  next.addEventListener("click", nextSlide);

  // Atualizar largura dos slides ao redimensionar a janela
  window.addEventListener("resize", updateCarousel);

  // Garantir alinhamento inicial ao carregar a página
  window.addEventListener("load", updateCarousel);

  // Rodar o carrossel automaticamente a cada 5 segundos
  const autoSlideInterval = 5000; // Intervalo em milissegundos
  let autoSlide = setInterval(nextSlide, autoSlideInterval);

  // Pausar o carrossel ao interagir com os botões
  const pauseAutoSlide = () => {
    clearInterval(autoSlide);
    autoSlide = setInterval(nextSlide, autoSlideInterval); // Reiniciar após interação
  };

  prev.addEventListener("click", pauseAutoSlide);
  next.addEventListener("click", pauseAutoSlide);

  // Pausar o carrossel ao passar o mouse sobre ele
  carousel.addEventListener("mouseover", () => clearInterval(autoSlide));

  // Reiniciar o carrossel ao tirar o mouse
  carousel.addEventListener("mouseout", () => {
    autoSlide = setInterval(nextSlide, autoSlideInterval);
  });
</script>
